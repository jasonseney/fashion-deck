<link rel="stylesheet" type="text/css" href="/stylesheets/reset-min.css" />
<link rel="stylesheet" type="text/css" href="/stylesheets/reset-fonts-min.css" />

<link rel="stylesheet" type="text/css" href="/stylesheets/page.css" />

    <div class="deck"> 

<header>

    <% if @data['logo'] != "" %>
        <img class="logo" src="<%= @data['logo'] %>" />
    <% end %>

    <h1><%= @data['title'] %></h1>

    <a class="create-link" href="/">+ FD</a>

    <% if @data['spotify_playlist'] != "" %>
        <div id="music">
                <iframe src="https://embed.spotify.com/?uri=<%= @data['spotify_playlist']%>" width="360" height="80" frameborder="0" allowtransparency="true"></iframe>
        </div>
    <% end %>

</header>

<div id="slot"></div>

<% if @data['tumblr_blog'] != "" %>
    <div id="photos" class="clearfix">
        <div class="slider clearfix">

        <% @tumblr_posts['response']['posts'][0..8].each do |post| %>
            <% if post["photos"] %>
                <div class="photo">
                    <img src="<%= post["photos"].first["alt_sizes"].first["url"] %>" alt="<%= post["id"] %>" />
                </div>
            <% end %>
        <% end %>

        </div>
    </div>
<% end %>

<div class="clear"></div>

<% if @data['vimeo_username'] != ""  %>
    <div class="video">
        <iframe src="http://player.vimeo.com/video/<%= @vimeo_videos.first["id"] %>" width="1280" height="720" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
    </div>
<% end %>

<div class="clear"></div>

    <% if @data['etsy_shop_id'] != "" %>
        <div class="products clearfix">

        <% @etsy_products['results'][0..1].each do |product| %>
            <a href="<%= product["url"]%>" target="_blank" class="product">
                <img src="<%= product["MainImage"]["url_570xN"] %>" width="570" />
                <h4><%= product["title"] %></h4>
            </a>
        <% end %>

        <div>
    <% end %>

<div class="clear"></div>

<% if @data['vimeo_username'] != "" and @vimeo_videos[1] %>
    <div>
        <iframe src="http://player.vimeo.com/video/<%= @vimeo_videos[1]["id"] %>" width="1280" height="720" frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen></iframe>
    </div>
<% end %>

<div class="clear"></div>

    <% if @data['etsy_shop_id'] != "" and @etsy_products['results'][3] %>
        <div class="products clearfix">
        <% @etsy_products['results'][2..3].each do |product| %>
            <a href="<%= product["url"]%>" target="_blank" class="product">
                <img src="<%= product["MainImage"]["url_570xN"] %>" width="570" />
                <h4><%= product["title"] %></h4>
            </a>
        <% end %>
        </div>
    <% end %>

</div>

